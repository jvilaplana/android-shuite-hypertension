<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@androi">



    </LinearLayout>


    <RelativeLayout
        android:id="@+id/listresultadosparent"
        android:layout_below="@+id/riblete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margintablelateral"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="@dimen/margintablelateral">
        <ListView
            android:id="@+id/resultados_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/alphabeticimage"
            android:scrollbars="none"
            android:layout_marginTop="-3dp"
            android:background="@color/graybp"
            android:fadingEdge="none"
            />

        <ImageView
            android:id="@+id/alphabeticimage"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margintablelatopbottom"
            android:layout_height="wrap_content"
            android:background="@drawable/tablepanel"/>
    </RelativeLayout>


</LinearLayout>