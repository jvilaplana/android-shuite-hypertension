<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/prueba"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/homegridview"
    android:background="@android:color/black"/>


    <GridView
        android:id="@+id/homegridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_homegridview"
        android:layout_marginLeft="@dimen/margin_homegridview"
        android:layout_marginRight="@dimen/margin_homegridview"
        android:horizontalSpacing="@dimen/gridview_spacing"
        android:verticalSpacing="@dimen/gridview_spacing"
        android:numColumns="2"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        >
    </GridView>


</RelativeLayout>