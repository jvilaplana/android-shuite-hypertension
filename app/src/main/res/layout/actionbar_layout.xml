<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayactionbar">

<ImageButton
    android:id="@+id/actionBarBackMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/back"
    />
    <TextView
        android:id="@+id/textviewbpcontrol"
        android:layout_toRightOf="@+id/actionBarBackMenu"
        android:layout_toLeftOf="@+id/actionBarMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOLA"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        />

    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionBarMenu"
        android:src="@drawable/menu"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>