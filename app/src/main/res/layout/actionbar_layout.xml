<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/graybp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/actionbar_padding"
        android:id="@+id/actionBarMenu"
        android:src="@drawable/menu_buttonselector"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        />

    <com.android.bpcontrol.customViews.RobotoTextView
        android:id="@+id/textviewbpcontrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/menutext"
        android:padding="@dimen/actionbar_padding"
        android:tag="RobotoBold"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:gravity="center"
        />
    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/actionbar_padding"
        android:id="@+id/fakeMenu"
        android:layout_toLeftOf="@+id/textviewbpcontrol"
        android:src="@drawable/menu_buttonselector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        />

</RelativeLayout>