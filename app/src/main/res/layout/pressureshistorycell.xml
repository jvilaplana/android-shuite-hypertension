<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/historialcell"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fetleimage"
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/semafor_yellow"/>

        </LinearLayout>

        <com.android.bpcontrol.customviews.RobotoTextView
            android:id="@+id/systolictext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/menutext"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <com.android.bpcontrol.customviews.RobotoTextView
            android:id="@+id/diastolictext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/menutext"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <com.android.bpcontrol.customviews.RobotoTextView
            android:id="@+id/pulsetext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/menutext"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <com.android.bpcontrol.customviews.RobotoTextView
        android:id="@+id/historialdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:background="@color/grayprofile"
        android:gravity="center"
        android:tag="RobotoBold"
        android:textSize="16sp"
        android:visibility="gone"
        />

</LinearLayout>